<!-- Validation failure messages -->

<% if @recipe.errors.any? %>
  <% @recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit <%= @recipe.recipe_name %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_recipe/<%= @recipe.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for recipe_name -->
          <div class="form-group">
            <label for="recipe_name" class="col-sm-2 control-label">
              Recipe name
            </label>
            <div class="col-sm-10">
              <textarea id="recipe_name" name="recipe_name" placeholder="Recipe name" class="form-control" rows="3"><%= @recipe.recipe_name %></textarea>
            </div>
          </div>

           <!-- Label and input for protein_id -->
          <div class="form-group">
            <label for="protein_id" class="col-sm-2 control-label">
              Protein
            </label>
            <div class="col-sm-10">
               <%= select_tag(:protein_id, options_from_collection_for_select(Protein.all, :id, :name, @recipe.protein_id), :class => "form-control") %>
            </div>
          </div>

                  <!-- Label and input for chef_id -->
          <div class="form-group">
            <label for="chef_id" class="col-sm-2 control-label">
              Chef
            </label>
            <div class="col-sm-10">
              <%= select_tag(:chef_id, options_from_collection_for_select(Chef.all, :id, :name, @recipe.chef_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for cuisine_id -->
          <div class="form-group">
            <label for="cuisine_id" class="col-sm-2 control-label">
              Cuisine
            </label>
            <div class="col-sm-10">
              <%= select_tag(:cuisine_id, options_from_collection_for_select(Cuisine.all, :id, :name, @recipe.cuisine_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for ingredient_list -->
          <div class="form-group">
            <label for="ingredient_list" class="col-sm-2 control-label">
              Ingredient list
            </label>
            <div class="col-sm-10">
              <textarea id="ingredient_list" name="ingredient_list" placeholder="Ingredient list" class="form-control" rows="3"><%= @recipe.ingredient_list %></textarea>
            </div>
          </div>

          <!-- Label and input for directions -->
          <div class="form-group">
            <label for="directions" class="col-sm-2 control-label">
              Directions
            </label>
            <div class="col-sm-10">
              <textarea id="directions" name="directions" placeholder="Directions" class="form-control" rows="3"><%= @recipe.directions %></textarea>
            </div>
          </div>

          <!-- Label and input for image_url -->
          <div class="form-group">
            <label for="image_url" class="col-sm-2 control-label">
              Image
            </label>
            <div class="col-sm-10">
              <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @recipe.image_url %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Recipe
              </button>
              or
              <a href="/recipes/<%= @recipe.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
